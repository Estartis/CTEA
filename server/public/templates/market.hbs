<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/public/static/css/main.css">
    <title> CTea </title>
    <script src="/public/js/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.ethers.io/lib/ethers-5.0.umd.min.js" type="application/javascript"></script>
    <style type="text/css">
        html {
            font-family: monospace;
            height: 100%;
            background-image: url(/public/image/Background_game.jpg);
            background-repeat: no-repeat;
            background-attachment: scroll;
        }
    </style>
</head>

<body>
    <header>
        <div class="header-block">
            <button class="comeback" id="comeback-btn">
                <img src="/public/image/comeback.png" alt="Comeback">
            </button>
            <div class="market_header">
                Market
            </div>
        </div>
    </header>
    <section class="main-module">
        <div class="card-window">
            <div class="card-market">
                <div class="card-planet-market">
                    <div class="card-part-market">
                        <img class="planet_color" src="/public/image/Graphics/withoutWater/planet_color_blue.png" width="150" height="150">
                        <img class="planet_contour" src="/public/image/Graphics/contour/contour_red.png" width="170" height="170">

                    </div>
                    <div class="data-part-market">
                        <div class="field-name-market">
                            <p class="name-plan-market">Genesis</p>
                        </div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="inf">
                            <div class="field-type-market">
                                <p class="type-plan-market lang" key='com-rare'>Com/Rare</p>
                                <div class="information" id='information1' data-tooltip="">
                                    <img class="img-white" src="/public/image/information.png">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="buttons-market">
                <div class="price"></div>
                <button class="buy lang" key='buy' id="buy-genesis">
                    BUY
                </button>
            </div>
        </div>
        <div class="card-window">
            <div class="card-market">
                <div class="card-planet-market">
                    <div class="card-part-market">

                    </div>
                    <div class="data-part-market">
                        <div class="field-name-market">
                            <p class="name-plan-market"> Extra</p>
                        </div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="round-market"></div>
                        <div class="inf">
                            <div class="field-type-market">
                                <p class="type-plan-market lang" key='common'>Common</p>
                                <div class="information" id='information2' data-tooltip="">
                                    <img class="img-white" src="/public/image/information.png">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="buttons-market">
                <div class="price"></div>
                <button class="buy lang" key='buy' id="buy-common">
                    BUY
                </button>
            </div>
        </div>

    </section>

    <div class="market-popup-fade">
        <div class="market-popup">
            <a class="market-popup-close lang" key="close-btn" href="#">Cancel</a>
            <form class="enter-nickname" method="post">
                <input class="window-enter-market" type="text" name="address" id="address" readonly>
                <div class="warning lang" key="">Your Address </div>
                <input class="window-enter-market" type="text" name="value" id="value" readonly>
                <div class="warning lang" key="">your Value</div>
                <input type="submit" class="agree lang" id="check-onload" key="done" value="Agree">
            </form>
        </div>
    </div>


</body>
<script src="/public/js/market.js"></script>
<script src="/public/js/lang.js"></script>

</html>